				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": " select * from infobiz.INFORMATION_SCHEMA.TABLES\nwhere Table_name in ('invoices','tsnonwork','tssubmit','tstimesheet','projectTerms','projectType','sow','sowDetail','sowMilestone'\n,'taskCenter','deCoverage','deProjectMetrics','riskCategory','gtp','accountInfo','allocation','monthly_allocation','treq','isow'\n,'isowDetail','isowMilestone','monthlySOWRoleWiseRevenue_View','monthlyCMSForecastforMilestone_View','po','monthlyCMSForecastforTM_View'\n,'tstime','monthlySOWRevenueforMilestone_View','revenueProjection','monthlySOWRevenueforTM_View','deAppreciation','associateSkills'\n,'cms','deComplaint','cmsDetail','deMsr','roles','tsapproval','deValueAdd','deGovernance','invoiceDetail','tsitem','deWsr','invoiceInfo'\n,'tsitemhours')",
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "Infobiz_tables",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
